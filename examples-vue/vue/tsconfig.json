{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@stonebule/designable-*": ["../../packages/*/src"],
      "@stonebule/designable-formily-*": ["../../formily/*/src"],
      "@examples-vue/*": ["../../examples-vue/*/src"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue"],
  "exclude": ["./src/__tests__/*", "./esm/*", "./lib/*"]
}
